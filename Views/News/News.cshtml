@model List<e_commmerce.Entities.News>

@{
    ViewData["Title"] = "News";
    Layout = "_Layout";
}
<!--blog area start-->

<div class="blog_area">
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="single_blog">
                <div class="blog_thumb">
                        <a href="blog-details.html"><img src="@news.Image" style="width: 100px; height: auto;" /a>

                </div>
                <div class="blog_content">
                    <div class="blog_post">
                        <ul>
                        </ul>
                    </div>
                        <h3><a href="blog-details.html">@news.Title</a></h3>
                    <p>@news.Description</p>
                    <div class="post_footer">
                        <div class="post_meta">
                            <ul>
                                <li>Jun 20, 2018</li>
                                <li>3 Comments</li>
                            </ul>
                        </div>
                        <div class="Read_more">
                            <a href="blog-details.html">Read more  <i class="fa fa-angle-double-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>
<!--blog area end-->
<!--pagination style start-->
<div class="blog_pagination">
    <div class="row">
        <div class="col-12">
            <div class="page_number">
                <span>Pages: </span>
                <ul>
                    <li>«</li>
                    <li class="current_number">1</li>
                    <li><a href="#">2</a></li>
                    <li>»</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--pagination style end-->
