@model List<e_commmerce.Entities.News>

@{
    ViewData["Title"] = "News";
    Layout = "_Layout";
    int currentPage = ViewData["CurrentPage"] != null ? (int)ViewData["CurrentPage"] : 1;
    int totalPages = ViewData["TotalPages"] != null ? (int)ViewData["TotalPages"] : 1;
}

<!--blog area start-->

<div class="blog_area">
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="single_blog">
                    <div class="blog_thumb">
                        <a asp-controller="News" asp-action="NewsDetails" asp-route-id="@news.IdN">
                            <img src="@news.Image" style="width: 100%; height: 200px;" />
                        </a>
                    </div>
                    <div class="blog_content">
                        <div class="blog_post">
                            <ul>
                            </ul>
                        </div>
                        <h3>
                            <a asp-controller="News" asp-action="NewsDetails" asp-route-id="@news.IdN">
                                @news.Title
                            </a>
                        </h3>
                        <p>@(news.Description.Length > 100 ? @news.Description.Substring(0, 100) + "..." : @news.Description)</p>
                        <div class="post_footer">
                            <div class="post_meta">
                                <ul>
                                    <p>@news.TimeCreate</p>
                                </ul>
                            </div>
                            <div class="Read_more">
                                <a asp-controller="News" asp-action="NewsDetails" asp-route-id="@news.IdN">
                                    Read more <i class="fa fa-angle-double-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Pagination Controls -->
<div class="blog_pagination">
    <div class="row">
        <div class="col-12">
            <div class="page_number">
                <span>Pages: </span>
                <ul>
                    <li class="previous @(currentPage <= 1 ? "disabled" : "")">
                        @if (currentPage > 1)
                        {
                            <a asp-action="News" asp-route-page="@(currentPage - 1)">«</a>
                        }
                        else
                        {
                            <span>«</span>
                        }
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="@(i == currentPage ? "current_number" : "")">
                            <a asp-action="News" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="next @(currentPage >= totalPages ? "disabled" : "")">
                        @if (currentPage < totalPages)
                        {
                            <a asp-action="News" asp-route-page="@(currentPage + 1)">»</a>
                        }
                        else
                        {
                            <span>»</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--pagination style end-->
